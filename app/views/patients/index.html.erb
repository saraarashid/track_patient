<p id="notice"><%= notice %></p>

<h2 class="bg-success" >Listing Patients</h2>

<table  class="table table-striped   table-condensed">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>State</th>
      <th>Doctor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.email %></td>
        <td><%= patient.phone_number %></td>
        <td><%= patient.state %></td>
        <td><%= patient.doctor_id %></td>
        <td><%= link_to 'Show', patient,  class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, class: "btn btn-danger" ,data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_patient_path,  class: "btn btn-primary" %>
